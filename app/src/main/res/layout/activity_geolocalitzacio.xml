<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_geolocalitzacio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kyotoryuu.so.Geolocalitzacio">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/posicionament_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGPS" />

        <Button
            android:text="Google Maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGoogle"
            tools:ignore="HardcodedText" />

        <Button
            android:text="@string/events_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEvents" />

        <Button
            android:text="Enrere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEnrere"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>
